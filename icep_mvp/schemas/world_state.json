{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "world_state.json",
  "title": "ICEP World-State",
  "type": "object",
  "required": [
    "kind",
    "state_id",
    "intent_id",
    "base_state",
    "state_ref",
    "created_at"
  ],
  "properties": {
    "kind": { "const": "world_state" },
    "state_id": { "$ref": "common.json#/$defs/id" },
    "intent_id": { "$ref": "common.json#/$defs/id" },
    "parents": {
      "type": "array",
      "items": { "$ref": "common.json#/$defs/world_state_ref" },
      "uniqueItems": true
    },
    "base_state": { "$ref": "common.json#/$defs/world_state_ref" },
    "change_set": { "$ref": "common.json#/$defs/artifact_ref" },
    "state_ref": { "$ref": "common.json#/$defs/world_state_ref" },
    "producer": { "$ref": "common.json#/$defs/actor" },
    "labels": { "$ref": "common.json#/$defs/labels" },
    "created_at": { "$ref": "common.json#/$defs/timestamp" }
  },
  "additionalProperties": false
}
