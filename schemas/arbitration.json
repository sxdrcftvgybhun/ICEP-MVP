{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "arbitration.json",
  "title": "ICEP Arbitration Decision",
  "type": "object",
  "required": [
    "kind",
    "decision_id",
    "arbiter",
    "considered_intents",
    "created_at"
  ],
  "properties": {
    "kind": { "const": "arbitration" },
    "decision_id": { "$ref": "common.json#/$defs/id" },
    "arbiter": { "$ref": "common.json#/$defs/actor" },
    "considered_intents": {
      "type": "array",
      "items": { "$ref": "common.json#/$defs/id" },
      "minItems": 1,
      "uniqueItems": true
    },
    "accepted_intent_id": { "$ref": "common.json#/$defs/id" },
    "accepted_state": { "$ref": "common.json#/$defs/world_state_ref" },
    "rejected_intents": {
      "type": "array",
      "items": { "$ref": "common.json#/$defs/id" },
      "uniqueItems": true
    },
    "conflicts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["intent_ids", "reason"],
        "properties": {
          "intent_ids": {
            "type": "array",
            "items": { "$ref": "common.json#/$defs/id" },
            "minItems": 2,
            "uniqueItems": true
          },
          "reason": { "type": "string", "maxLength": 1024 },
          "scope_overlap": { "$ref": "common.json#/$defs/scope" },
          "constraint_ids": {
            "type": "array",
            "items": { "$ref": "common.json#/$defs/id" },
            "uniqueItems": true
          }
        },
        "additionalProperties": false
      }
    },
    "policy": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "maxLength": 128 },
        "version": { "type": "string", "maxLength": 64 },
        "parameters": { "type": "object" }
      },
      "additionalProperties": false
    },
    "evidence_ids": {
      "type": "array",
      "items": { "$ref": "common.json#/$defs/id" },
      "uniqueItems": true
    },
    "labels": { "$ref": "common.json#/$defs/labels" },
    "created_at": { "$ref": "common.json#/$defs/timestamp" }
  },
  "additionalProperties": false
}
