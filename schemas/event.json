{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "event.json",
  "title": "ICEP Event",
  "type": "object",
  "required": ["kind", "event_id", "event_type", "timestamp"],
  "properties": {
    "kind": { "const": "event" },
    "event_id": { "$ref": "common.json#/$defs/id" },
    "stream_id": { "$ref": "common.json#/$defs/id" },
    "event_type": {
      "type": "string",
      "enum": [
        "INTENT_DECLARED",
        "CONSTRAINT_BOUND",
        "EVIDENCE_ATTACHED",
        "SIMULATION_REPORTED",
        "STATE_PRODUCED",
        "ARBITRATION_DECIDED",
        "STATE_ACCEPTED",
        "STATE_REJECTED"
      ]
    },
    "actor": { "$ref": "common.json#/$defs/actor" },
    "timestamp": { "$ref": "common.json#/$defs/timestamp" },
    "payload": {
      "oneOf": [
        { "$ref": "intent.json" },
        { "$ref": "constraint.json" },
        { "$ref": "evidence.json" },
        { "$ref": "world_state.json" },
        { "$ref": "arbitration.json" }
      ]
    },
    "payload_ref": { "$ref": "common.json#/$defs/artifact_ref" },
    "prev_event_digest": { "$ref": "common.json#/$defs/digest" },
    "labels": { "$ref": "common.json#/$defs/labels" }
  },
  "additionalProperties": false,
  "anyOf": [
    { "required": ["payload"] },
    { "required": ["payload_ref"] }
  ]
}
