{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "evidence.json",
  "title": "ICEP Evidence",
  "type": "object",
  "required": [
    "kind",
    "evidence_id",
    "intent_id",
    "base_state",
    "candidate_state",
    "producer",
    "created_at",
    "evaluations"
  ],
  "properties": {
    "kind": { "const": "evidence" },
    "evidence_id": { "$ref": "common.json#/$defs/id" },
    "intent_id": { "$ref": "common.json#/$defs/id" },
    "base_state": { "$ref": "common.json#/$defs/world_state_ref" },
    "candidate_state": { "$ref": "common.json#/$defs/world_state_ref" },
    "producer": { "$ref": "common.json#/$defs/actor" },
    "overall_status": {
      "type": "string",
      "enum": ["pass", "fail", "unknown"]
    },
    "evaluations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["constraint_id", "status"],
        "properties": {
          "constraint_id": { "$ref": "common.json#/$defs/id" },
          "status": { "type": "string", "enum": ["pass", "fail", "unknown"] },
          "summary": { "type": "string", "maxLength": 1024 },
          "artifacts": {
            "type": "array",
            "items": { "$ref": "common.json#/$defs/artifact_ref" }
          }
        },
        "additionalProperties": false
      }
    },
    "simulation": {
      "type": "object",
      "required": ["simulation_id"],
      "properties": {
        "simulation_id": { "$ref": "common.json#/$defs/id" },
        "environment": { "type": "string", "maxLength": 256 },
        "started_at": { "$ref": "common.json#/$defs/timestamp" },
        "ended_at": { "$ref": "common.json#/$defs/timestamp" },
        "artifacts": {
          "type": "array",
          "items": { "$ref": "common.json#/$defs/artifact_ref" }
        }
      },
      "additionalProperties": false
    },
    "labels": { "$ref": "common.json#/$defs/labels" },
    "created_at": { "$ref": "common.json#/$defs/timestamp" }
  },
  "additionalProperties": false
}
